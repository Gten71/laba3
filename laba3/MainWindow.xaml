        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="First" Grid.Column="0" Margin="13,79,167,294"  Background="Bisque"/>
        <TextBox x:Name="Second" Grid.Column="0" Margin="13,186,168,186"  Background="Bisque"/>



        <TextBox Grid.Column="0" Margin="10,48,216,345" >Введите число А</TextBox>
        <TextBox Grid.Column="0" Margin="10,145,201,248" >Введите число В</TextBox>
        <TextBox Grid.Column="0" Margin="10,253,201,140" >Второй число С</TextBox>
        <TextBlock x:Name="Result" Grid.Column="1" Background="Bisque" Margin="47,99,47,258"/>
        <Button x:Name="Solve" Grid.Column="1" Content="Полуразность чисел А и Б на число С " Margin="47,199,47,140" Click="Solve_Click"  />
        <TextBox x:Name="Third" Grid.Column="0" Margin="10,299,171,73"  Background="Bisque"/>
    </Grid>
</Window>